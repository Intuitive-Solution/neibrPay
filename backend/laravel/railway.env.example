# NeibrPay Laravel Backend - Railway Environment Variables
# Copy these variables to Railway dashboard under Variables tab

# App Configuration
APP_NAME=NeibrPay
APP_ENV=production
APP_KEY=base64:your-generated-app-key-here
APP_DEBUG=false
APP_URL=https://your-railway-app-url.railway.app

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Database Configuration (Railway will provide these)
DB_CONNECTION=mysql
DB_HOST=mysql.railway.internal
DB_PORT=3306
DB_DATABASE=railway
DB_USERNAME=root
DB_PASSWORD=DZRvlEEcIkafnhGKboHqswSfPJvILdRN

# Laravel Sanctum (for API authentication)
SANCTUM_STATEFUL_DOMAINS=your-frontend-domain.com,localhost:3000,localhost:3001
SESSION_DOMAIN=.neibrpay.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://admin.neibrpay.com,https://app.neibrpay.com,http://localhost:3000,http://localhost:3001

# Security
BCRYPT_ROUNDS=12

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120